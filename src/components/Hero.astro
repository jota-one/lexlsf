---
import heroImg from '../assets/hero.jpg';
import Search from './Search.vue';
---
<section
  class="relative w-full min-h-[90vh] flex flex-col items-center justify-center text-center px-6 lg:px-16 py-16 md:py-32"
>
  <!-- Background Image -->
  <div
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url(${heroImg.src})`}
  >
  </div>
  <div class="absolute inset-0 bg-black opacity-20"></div>

  <!-- Content -->
  <div class="relative z-10 text-white w-full pt-50">
    <h1 class="text-4xl md:text-6xl font-bold leading-tight">
      Bienvenue sur le Lexique LSF
    </h1>
    <div class="mt-6" id="heroSearch">
      <Search client:load mode="hero" />
    </div>
  </div>
</section>

<script>
  // Masquer la recherche si l'utilisateur n'est pas authentifiÃ©
  const userJwt = sessionStorage.getItem('userJwt')
  const isAuthenticated = userJwt && userJwt.length > 0
  
  if (!isAuthenticated) {
    const searchElement = document.getElementById('heroSearch')
    if (searchElement) {
      searchElement.style.display = 'none'
    }
  }
</script>